c:
	g++ ../src/main.cpp ../src/snake.cpp ../src/screen.cpp ../src/game_io.cpp ../src/game.cpp -lncurses ../src/utils.cpp -o snake_game

run:
	@g++ ../src/main.cpp ../src/snake.cpp ../src/screen.cpp ../src/game_io.cpp ../src/game.cpp -lncurses -lallegro ../src/utils.cpp -o snake_game
	@./snake_game
	@rm snake_game
	
